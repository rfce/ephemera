{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "shell/state": ["shell/src/atoms/index.js"],
      "pixels/PixelsApp": ["pixels-remote/src/app/AddRecipient.tsx"],
      "pixels/AliasPick": ["pixels-remote/src/app/AliasPick.tsx"],
      "pixels/CreateMessage": ["pixels-remote/src/app/CreateMessage.tsx"],
      "create-pixels/CreatePixelsApp": [
        "create-pixels-remote/src/app/CreatePixelsApp.tsx"
      ],
      "create-pixels/Header": [
        "create-pixels-remote/src/app/Header.tsx"
      ],
      "upload/UploadApp": ["upload-remote/src/app/index.ts"],
      "view/ViewApp": ["view-remote/src/app/index.ts"],
      "@org/shared-state": ["shared/state/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
